{
  // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
  // ğŸ¥ ALTAMEDICA VS Code Settings - Clean & Optimized Configuration
  // ConfiguraciÃ³n limpia y optimizada para desarrollo mÃ©dico con Copilot
  // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

  // â”€â”€â”€â”€ GitHub Copilot Configuration â”€â”€â”€â”€
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false,
    "typescript": true,
    "javascript": true,
    "json": true,
    "yaml": true,
    "powershell": true
  },
  "github.copilot.chat.localeOverride": "es",
  "github.copilot.chat.followUps": "always",
  "github.copilot.chat.scopeSelection": true,
  "github.copilot.terminal.enableTerminalSuggestions": true,
  "github.copilot.terminal.enableAutoCompletions": true,
  "github.copilot.terminal.enableShellIntegration": true,

  // â”€â”€â”€â”€ Editor Settings â”€â”€â”€â”€
  "editor.fontFamily": "'Cascadia Code', 'JetBrains Mono', Consolas, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.lineHeight": 1.4,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 120,
  "editor.rulers": [80, 120],
  "editor.minimap.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.inlineSuggest.enabled": true,
  "editor.suggestOnTriggerCharacters": true,
  "editor.acceptSuggestionOnEnter": "on",

  // â”€â”€â”€â”€ Files & Search â”€â”€â”€â”€
  "files.autoSave": "onFocusChange",
  "files.associations": {
    "*.md": "markdown",
    "*.mdx": "mdx",
    "*.json": "jsonc"
  },
  "files.exclude": {
    "**/node_modules": true,
    "**/.turbo": true,
    "**/dist": true,
    "**/.next": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.next": true,
    "**/coverage": true,
    "**/.turbo": true
  },

  // â”€â”€â”€â”€ Terminal Configuration â”€â”€â”€â”€
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "args": ["-NoLogo", "-ExecutionPolicy", "RemoteSigned"]
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "path": "C:\\Program Files\\Git\\bin\\bash.exe",
      "args": ["--login"],
      "icon": "terminal-bash"
    }
  },
  "terminal.integrated.fontFamily": "'Cascadia Code', Consolas, monospace",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.suggest.enabled": true,
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.shellIntegration.showWelcome": "never",
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",

  // â”€â”€â”€â”€ TypeScript & JavaScript â”€â”€â”€â”€
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "relative",
  "javascript.preferences.importModuleSpecifier": "relative",

  // â”€â”€â”€â”€ ESLint & Formatting â”€â”€â”€â”€
  "eslint.workingDirectories": ["apps", "packages"],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // â”€â”€â”€â”€ Workbench & UI â”€â”€â”€â”€
  "workbench.colorTheme": "Default Dark+",
  "workbench.iconTheme": "vs-seti",
  "workbench.commandPalette.history": 50,
  "workbench.list.defaultFindMode": "filter",
  "explorer.confirmDelete": false,

  // â”€â”€â”€â”€ Git â”€â”€â”€â”€
  "git.openRepositoryInParentFolders": "always",
  "git.confirmSync": false,
  "git.autofetch": true,

  // â”€â”€â”€â”€ Security & Trust â”€â”€â”€â”€
  "security.workspace.trust.enabled": true,
  "security.workspace.trust.startupPrompt": "once",

  // â”€â”€â”€â”€ PowerShell â”€â”€â”€â”€
  "powershell.integratedConsole.showOnStartup": false,
  "powershell.debugging.createTemporaryIntegratedConsole": false,
  "powershell.codeFormatting.preset": "OTBS",

  // â”€â”€â”€â”€ ALTAMEDICA Specific â”€â”€â”€â”€
  "path-intellisense.mappings": {
    "@altamedica/": "${workspaceFolder}/packages/",
    "@apps/": "${workspaceFolder}/apps/"
  },

  // â”€â”€â”€â”€ Custom Words for Spell Check â”€â”€â”€â”€
  "cSpell.words": [
    "Altamedica",
    "anamnesis",
    "telemedicina",
    "expediente",
    "diagnostico",
    "prescripcion",
    "HIPAA",
    "PHI",
    "clinico",
    "medico",
    "paciente",
    "doctor",
    "monorepo",
    "turbo",
    "pnpm",
    "microservicio",
    "triage",
    "emergencia",
    "urgencia",
    "consulta",
    "cita",
    "historial",
    "nextjs",
    "autoimport",
    "autofix",
    "errorlens"
  ],

  // â”€â”€â”€â”€ Language Specific â”€â”€â”€â”€
  "emmet.includeLanguages": {
    "typescript": "html",
    "typescriptreact": "html"
  }
}
