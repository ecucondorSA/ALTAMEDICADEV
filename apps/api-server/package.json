{
  "name": "@altamedica/api-server",
  "version": "1.0.0",
  "description": "ALTAMEDICA Main API Server - Central orchestration and core endpoints",
  "private": true,
  "scripts": {
    "dev": "next dev --port 3001",
    "build": "next build",
    "start": "next start --port 3001",
